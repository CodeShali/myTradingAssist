# Database Configuration
POSTGRES_PASSWORD=your_secure_password
DATABASE_URL=postgresql://trading_user:your_secure_password@localhost:5432/trading_platform

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Keys - External Services
# Alpaca Trading API
# Paper Trading: https://paper-api.alpaca.markets/v2
# Live Trading: https://api.alpaca.markets/v2
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_BASE_URL=https://paper-api.alpaca.markets/v2

# Polygon.io API (Market Data)
# Used for: Options chains, stock quotes, historical data, technical indicators
POLYGON_API_KEY=

# NewsAPI (News Sentiment)
NEWS_API_KEY=

# OpenAI API (Optional - for enhanced NLP and AI features)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4  # or gpt-3.5-turbo for cost savings

# Trading Configuration
TRADING_MODE=paper  # 'paper' or 'live'
MAX_POSITION_SIZE_PCT=10
MAX_DAILY_TRADES=20
DEFAULT_PROFIT_TARGET_PCT=50
DEFAULT_STOP_LOSS_PCT=50

# Security
JWT_SECRET=your_jwt_secret_key_min_32_chars
SESSION_SECRET=your_session_secret_key

# Discord Bot Configuration
# Get these from: https://discord.com/developers/applications
DISCORD_APPLICATION_ID=
DISCORD_PUBLIC_KEY=
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=
DISCORD_ADMIN_USER_ID=
# Channel IDs for different notification types (right-click channel â†’ Copy ID)
DISCORD_CHANNEL_ID=
DISCORD_SIGNALS_CHANNEL_ID=
DISCORD_TRADES_CHANNEL_ID=
DISCORD_ALERTS_CHANNEL_ID=
DISCORD_UPDATES_CHANNEL_ID=

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_URL=http://localhost:3000

# Frontend
REACT_APP_API_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3000

# Monitoring
GRAFANA_PASSWORD=admin

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_TO_FILE=true

# Feature Flags
ENABLE_AUTO_TRADING=true
ENABLE_NEWS_SENTIMENT=true
ENABLE_DISCORD_NOTIFICATIONS=true
ENABLE_WEB_NOTIFICATIONS=true

# Rate Limiting
ALPACA_RATE_LIMIT=200  # requests per minute
POLYGON_RATE_LIMIT=5   # requests per minute
NEWS_API_RATE_LIMIT=1000  # requests per day

# Risk Management
MAX_PORTFOLIO_DELTA=100
MAX_PORTFOLIO_GAMMA=50
MAX_PORTFOLIO_VEGA=500
MAX_CONCENTRATION_PCT=25  # max % in single underlying

# Signal Generation
SIGNAL_GENERATION_INTERVAL=300  # seconds (5 minutes)
SIGNAL_EXPIRATION_TIME=300  # seconds (5 minutes)
MIN_LIQUIDITY_SCORE=0.6
MAX_BID_ASK_SPREAD_PCT=5

# Position Management
POSITION_UPDATE_INTERVAL=3  # seconds
AUTO_SELL_ENABLED=true
TRAILING_STOP_ENABLED=false

# Analytics
ANALYTICS_UPDATE_INTERVAL=60  # seconds
PERFORMANCE_LOOKBACK_DAYS=365
